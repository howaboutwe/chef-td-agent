<% node[:td_agent][:config].each do |conf| %>
<<%= conf[0][:key] %> <%= conf[0][:value] %>>
  <% conf[1].each do |k,v| %>
    <%= k %> <%= v %>
  <% end %>
  <% if conf[2] %>
    <% conf[2].each do |nested_conf| %>
      <<%= nested_conf[0][:key] %> <%= nested_conf[0][:value] %>>
      <% nested_conf[1].each do |k,v| %>
        <%= k %> <%= v %>
      <% end %>
      </<%= nested_conf[0][:key] %>>
    <% end %>
  <% end %>
</<%= conf[0][:key] %>>
<% end %>

# Include config files in the ./config.d directory
include config.d/*.conf